<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1d2983"
        android:textSize="25sp"
        android:text="Name"
         />
    <TextView
        android:id="@+id/eid"
        android:textColor="#1d26d9"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:text="Eid"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:gravity="bottom|right"
        android:text="Date and Time"
        android:textColor="#7b1a1a"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000dff"
        android:text="Category: "
        android:layout_below="@id/eid"

        />
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Category"
        android:textColor="#802b80"
        android:layout_toRightOf="@id/category_title"
        android:layout_below="@+id/eid"
        />
    <TextView
        android:id="@+id/topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#001aff"
        android:text="Topic: "
        android:layout_marginBottom="10dp"
        android:layout_below="@id/category_title"

        />
    <TextView
        android:id="@+id/topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Topic"
        android:textColor="#844823"
        android:layout_toRightOf="@+id/topic_title"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/category"
        />
    <TextView
        android:id="@+id/feedback"
        android:background="@drawable/feed_background"
        android:textSize="25sp"
        android:textColor="#614f1f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textStyle="italic|bold"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/topic"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/feedback"
        android:src="@drawable/divider2" />

</RelativeLayout>